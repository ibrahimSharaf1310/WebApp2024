@model WebApp.Models.User

<div class="container mt-5">
    <h2 class="text-center">Edit User</h2>
    <form asp-action="EditUser" method="post" class="needs-validation" novalidate>
        <div class="form-group mb-3">
            <label for="UserName">Name:</label>
            <input type="text" class="form-control" id="UserName" name="UserName" value="@Model.UserName" required />
            <div class="invalid-feedback">
                Please provide a name.
            </div>
        </div>
        <div class="form-group mb-3">
            <label for="NationalId">National ID:</label>
            <input type="text" class="form-control" id="NationalId" name="NationalId" value="@Model.NationalId" required />
            <div class="invalid-feedback">
                Please provide a National ID.
            </div>
        </div>
        <div class="form-group mb-3">
            <label for="Address">Address:</label>
            <input type="text" class="form-control" id="Address" name="Address" value="@Model.Address" required />
            <div class="invalid-feedback">
                Please provide an Address.
            </div>
        </div>
        <div class="form-group mb-3">
            <label for="MeterNumber">Meter Number:</label>
            <input type="text" class="form-control" id="MeterNumber" name="MeterNumber" value="@Model.MeterNumber" required />
            <div class="invalid-feedback">
                Please provide a Meter Number.
            </div>
        </div>
        <div class="form-group mb-3">
            <label for="Password">Password:</label>
            <input type="password" class="form-control" id="Password" name="Password" value="@Model.Password" required />
            <div class="invalid-feedback">
                Please provide a Password.
            </div>
        </div>
        <div class="form-group mb-3">
            <label for="CreatedByAdminId">Admin ID:</label>
            <input type="text" class="form-control" id="CreatedByAdminId" name="CreatedByAdminId" value="@Model.CreatedByAdminId" required />
            <div class="invalid-feedback">
                Please provide an Admin ID.
            </div>
        </div>
        <div class="form-group mb-3">
            <label for="Role">Role:</label>
            <input type="text" class="form-control" id="Role" name="Role" value="@Model.Role" required />
            <div class="invalid-feedback">
                Please provide a Role.
            </div>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-primary">Save Changes</button>
        </div>
    </form>
</div>
