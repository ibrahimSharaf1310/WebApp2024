@model WebApp.Models.MeterReading
@{
    Layout = "~/Views/Shared/_NoHeaderLayout.cshtml";
}
<div class="container mt-5">
    <h1>Enter Meter Reading</h1>
    <p>Logged in as: @ViewBag.UserName</p> <!-- Display logged-in user's name -->
    <form asp-action="Reading" method="post">
        <div class="form-group">
            <label asp-for="ReadingDate" class="form-label">Reading Date</label>
            <input asp-for="ReadingDate" class="form-control" type="date" />
            <span asp-validation-for="ReadingDate" class="text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <label asp-for="MeterReading1" class="form-label">Meter Reading</label>
            <input asp-for="MeterReading1" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="MeterReading1" class="text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <label class="form-label">Calculated Bill (Meter Reading * 0.25)</label>
            <input class="form-control" type="text" value="@ViewBag.BillAmount" readonly />
        </div>
        <div class="form-group mt-4">
            <button type="submit" class="btn btn-primary">Save Reading</button>
            @if (ViewBag.ShowPayButton == true && ViewBag.BillAmount != null)
            {
                <a href="@Url.Action("PayBill","Home", new { id = ViewBag.ReadingId })" class="btn btn-success ms-2">Pay Now</a>
            }
        </div>
    </form>
</div>
