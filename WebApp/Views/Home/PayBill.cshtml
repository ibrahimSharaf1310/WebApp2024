@model WebApp.Models.PayingDetail
@{
    Layout = "~/Views/Shared/_NoHeaderLayout.cshtml";
}

@{
    ViewBag.Title = "Pay Bill";
}
<style>
    .container_btn {
        margin:30px;
        position: relative;
    }

    .d-flex {
        display: flex;
        justify-content: flex-end; /* Aligns items to the end (right side) */
    }

    .me-2 {
        margin-right: 0.5rem; /* Adds margin between the buttons */
    }
</style>
<div class="container_btn">
    <div class="d-flex justify-content-end mt-4">
        <a class="btn btn-primary me-2" asp-area="" asp-controller="Home" asp-action="Reading">Add Meter Reading</a>
        <a class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="Login">WebApp</a>
    </div>
</div>
<div class="container mt-5">
    <h2 class="text-center">Payment Details</h2>

    <div class="card mt-4">
        <div class="card-header">
            Billing Information
        </div>
        <div class="card-body">
            <p><strong>User Name:</strong> @Model.UserName</p>
            <p><strong>Meter Number:</strong> @Model.MeterNumber</p>
            <p><strong>Reading Date:</strong> @Model.ReadingDate.ToShortDateString()</p>
            <p><strong>Meter Reading:</strong> @Model.MeterReading</p>
            <p><strong>Bill Amount:</strong> @Model.BillAmount.ToString("C")</p>
        </div>
        <div class="card-footer text-center">
            <button type="button" class="btn btn-primary">Confirm Payment</button>
        </div>
    </div>
</div>
