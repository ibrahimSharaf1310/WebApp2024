@model IEnumerable<WebApp.Models.User>
<link rel="stylesheet" href="~/css/Start - Copy.css" />
<style>
    h2{
        color:white;
    }
</style>
<div class="container mt-5">
    <h2 class="text-center">All Users</h2>
    <table class="table table-bordered table-striped mt-3">
        <thead class="thead-dark">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">National ID</th>
                <th scope="col">Address</th>
                <th scope="col">Meter Number</th>
                <th scope="col">Password</th>
                <th scope="col">Admin ID</th>
                <th scope="col">Role</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <th scope="row" style="color:black;background-color:white">@user.Id </th>
                    <td>@user.UserName</td>
                    <td>@user.NationalId</td>
                    <td>@user.Address</td>
                    <td>@user.MeterNumber</td>
                    <td>@user.Password</td>
                    <td>@user.CreatedByAdminId</td>
                    <td>@user.Role</td>
                    <td>
                        <!-- Add Edit/Delete buttons as needed -->
                        <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-sm btn-warning">Edit</a>
                        <form asp-action="DeleteUserfromAdmin" asp-route-id="@user.Id" method="post" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this user?');">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
