@{
    Layout = "~/Views/Shared/_NoHeaderLayout.cshtml";
}
@model WebApp.Models.User

<div class="container mt-5">
    <h1 class="text-primary">User Dashboard</h1>

    <div class="row">
        <div class="col-md-6">
            <h3 class="text-success">Hello, <span>@Model.UserName</span>!</h3>
            <ul class="list-group">
                <li class="list-group-item"><strong>Name:</strong> @Model.UserName</li>
                <li class="list-group-item"><strong>National ID:</strong> @Model.NationalId</li>
                <li class="list-group-item"><strong>Address:</strong> @Model.Address</li>
                <li class="list-group-item"><strong>Meter Number:</strong> @Model.MeterNumber</li>
                <li class="list-group-item"><strong>Password:</strong> @Model.Password</li>
                <li class="list-group-item"><strong>Role:</strong> @Model.Role</li>
            </ul>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12 text-center">
            <a class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="Reading">Add Meter Reading</a>
        </div>
    </div>
</div>
